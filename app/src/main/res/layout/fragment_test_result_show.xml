<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    tools:context=".fragments.TestResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:background="#1229AA"
        android:backgroundTint="#86C8BC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ExtraText,MissingConstraints"
        tools:layout_editor_absoluteY="56dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvAllPoints"
            android:layout_width="0dp"
            app:cornerRadius="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:autoSizeMinTextSize="20dp"
            android:backgroundTint="#CEEDC7"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="200dp"
            android:minHeight="60dp"
            android:padding="15dp"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#73A9AD"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBasic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autoSizeMinTextSize="15sp"
            android:background="@drawable/style_txtview"
            android:backgroundTint="#CEEDC7"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="200dp"
            android:minHeight="60dp"
            android:padding="15dp"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#73A9AD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAllPoints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCollections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autoSizeMinTextSize="20dp"
            android:background="@drawable/style_txtview"
            android:backgroundTint="#CEEDC7"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="200dp"
            android:minHeight="60dp"
            android:padding="15dp"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#73A9AD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBasic" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvExceptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autoSizeMinTextSize="20dp"
            android:background="@drawable/style_txtview"
            android:backgroundTint="#CEEDC7"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="200dp"
            android:minHeight="60dp"
            android:padding="15dp"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#73A9AD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCollections" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvOOP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autoSizeMinTextSize="20dp"
            android:background="@drawable/style_txtview"
            android:backgroundTint="#CEEDC7"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="200dp"
            android:minHeight="60dp"
            android:padding="15dp"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#73A9AD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvExceptions" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvOperstors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autoSizeMinTextSize="20dp"
            android:background="@drawable/style_txtview"
            android:backgroundTint="#CEEDC7"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="200dp"
            android:minHeight="60dp"
            android:padding="15dp"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#73A9AD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOOP" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txtWork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#73A9AD"
            android:clickable="false"
            android:minWidth="150dp"
            android:minHeight="80dp"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#CEEDC7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAllPoints"
            app:strokeColor="#CEEDC7"
            app:strokeWidth="3dp" />
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>