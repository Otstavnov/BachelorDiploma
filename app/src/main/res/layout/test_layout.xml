<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:backgroundTint="#86C8BC"
    tools:context=".TestActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#86C8BC"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txtWork2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#73A9AD"
            android:clickable="false"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.3"
            android:minWidth="150dp"
            android:minHeight="80dp"
            android:padding="18dp"
            android:text="  Добро пожаловать в наше приложение для проверки уровня знаний языка Java! \n    Здесь вы сможете пройти тестирование и узнать свой уровень владения языком программирования. \n В своем профиле Вы можете посмотреть и изменить свои данные, а также пройти тестирование и посмотреть результаты, если ранее уже проходили тестирование. \n\n      Удачи в тестировании!"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#CEEDC7"
            android:textSize="19sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#CEEDC7"
            app:strokeWidth="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        tools:ignore="MissingConstraints"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="35dp"
        android:background="#73A9AD"
        app:itemTextColor="#CEEDC7"
        app:itemIconTint="#CEEDC7"
        app:itemTextAppearanceActive="@style/BottomNavigationTextActiveStyle"
        app:itemTextAppearanceInactive="@style/BottomNavigationTextNonActiveStyle" />
        />


</androidx.constraintlayout.widget.ConstraintLayout>